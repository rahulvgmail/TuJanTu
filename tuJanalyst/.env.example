# ===========================================
# tuJanalyst â€” Environment Variables
# ===========================================
# Copy this file to .env and fill in the values.
# All variables are prefixed with TUJ_ to avoid conflicts.

# --- MongoDB ---
TUJ_MONGODB_URI=mongodb://mongodb:27017
TUJ_MONGODB_DATABASE=tuJanalyst

# --- ChromaDB ---
TUJ_CHROMADB_PERSIST_DIR=./data/chromadb
TUJ_EMBEDDING_MODEL=all-MiniLM-L6-v2

# --- LLM (Anthropic) ---
TUJ_ANTHROPIC_API_KEY=sk-ant-your-key-here
TUJ_GATE_MODEL=claude-haiku
TUJ_ANALYSIS_MODEL=claude-sonnet
TUJ_DECISION_MODEL=claude-sonnet

# --- RSS Polling ---
TUJ_NSE_RSS_URL=https://www.nseindia.com/api/corporat-announcements?index=equities
TUJ_POLLING_INTERVAL_SECONDS=300
TUJ_POLLING_ENABLED=true

# --- Processing ---
TUJ_MAX_DOCUMENT_SIZE_MB=50
TUJ_TEXT_EXTRACTION_TIMEOUT_SECONDS=60

# --- Notifications ---
TUJ_NOTIFICATION_METHOD=slack
TUJ_SLACK_WEBHOOK_URL=
TUJ_SMTP_HOST=
TUJ_SMTP_PORT=587
TUJ_NOTIFICATION_EMAIL=
